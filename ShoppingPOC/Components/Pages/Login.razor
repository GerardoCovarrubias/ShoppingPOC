@page "/"

@using System.ComponentModel.DataAnnotations

<h3>Login</h3>

<EditForm Model="@credenciales" OnValidSubmit="IniciarSesion" FormName="loginForm">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="form-group">
        <label for="username">Username</label>
        <InputText id="username" class="form-control" @bind-Value="credenciales.Username" />
        <ValidationMessage For="@(() => credenciales.Username)" />
    </div>

    <div class="form-group mt-3">
        <label for="password">Password</label>
        <InputText id="password" type="password" class="form-control" @bind-Value="credenciales.Password" />
        <ValidationMessage For="@(() => credenciales.Password)" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Log In</button>
</EditForm>

@code {
    // This attribute tells Blazor to populate this property from the form data.
    [SupplyParameterFromForm(FormName = "loginForm")]
    private Credenciales credenciales { get; set; } = new();

    protected override void OnInitialized()
    {
        // If the form parameter is not yet populated (e.g., on initial page load),
        // we need to initialize it.
        credenciales ??= new Credenciales();
    }

    private void IniciarSesion()
    {
        // Your logic here.
        Console.WriteLine($"Attempting to log in with Username: {credenciales.Username}");
        Console.WriteLine($"And Password: {credenciales.Password}");
    }

    public class Credenciales
    {
        [Required(ErrorMessage = "Username is required.")]
        public string? Username { get; set; }

        [Required(ErrorMessage = "Password is required.")]
        [StringLength(100, MinimumLength = 6, ErrorMessage = "Password must be at least 6 characters long.")]
        public string? Password { get; set; }
    }
}



