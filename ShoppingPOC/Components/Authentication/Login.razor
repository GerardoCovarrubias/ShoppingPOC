@page "/Login"

@using System.ComponentModel.DataAnnotations
@rendermode InteractiveServer
@using BusinessLogic.Contracts
@using Models

<EditForm Model="@_user" OnValidSubmit="HandleLoginSumit" FormName="loginForm">
    <DataAnnotationsValidator />
    <h3>Login</h3> 

    <div class="grid-container">

        <div class="form-group">
            <label for="email">Email</label>
            <InputText id="username" class="form-control" @bind-Value="_user.Email" />
            <ValidationMessage For="@(() => _user.Email)" />
        </div>
        
        <div class="form-group mt-3 position-relative">
            <label for="password">Password</label>
            <InputText id="password" type="password" class="form-control" @bind-Value="_user.Password" />
            <span class="password-toggle" onclick="togglePasswordVisibility()">
            </span>
            
        </div>
        <ValidationMessage For="@(() => _user.Password)" />
        <div class="form-group mt-3">
            <button type="submit" class="btn btn-primary btn-login">Log In</button>
        </div>
    </div>


</EditForm>

<div class="ChangePassword">
    <a 
       @onclick="NavigateToChangePassword"
       class="d-inline-block mt-2">I forgot my password</a>
</div>

<div class="grid-container">
@if (!string.IsNullOrEmpty(_userValidation))
{
    <div class="alert alert-info mt-3">@_userValidation</div>
}
</div>
@if (_spinner == "Home")
{
    <Spinner Label="Charging Home Page..."/>
}

@code {

    [Inject]
    private ILoginService _loginService { get; set; }

    [Inject]
    private NavigationManager _navManager { get; set; }


    [SupplyParameterFromForm(FormName = "loginForm")]

    private User _user { get; set; } = new();
    private string _spinner { get; set; } = string.Empty;
    private string _userValidation { get; set; } = string.Empty;

    private async Task HandleLoginSumit()
    {

        var isValidUser = await _loginService.ValidateUserAsync(_user.Email, _user.Password);

        if (isValidUser)
        {
            _userValidation = "Login successful";
            StateHasChanged();
            _spinner = "Home";
            StateHasChanged();
            await Task.Delay(2000); 
            _navManager.NavigateTo("/home");
        }
        else
        {
            _userValidation = "Invalid username or password";
        }
    }

    private async Task NavigateToChangePassword()
    {
        StateHasChanged(); 
        await Task.Delay(2000);
        _navManager.NavigateTo("/EmailValidation");
    }
}







